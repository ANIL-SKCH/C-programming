// Simple calculator.
#include <stdio.h>
int main() {
  int a,b;
  char ch;
  printf("Enter the numbers : ");
  scanf("%d %d",&a,&b);
  printf("enter the operator : ");
  scanf(" %c",&ch);
  switch (ch){
      case '+' : printf("%d + %d = %d ",a,b,a+b); break;
      case '-' : printf("%d - %d = %d ",a,b,a-b);break;
      case '*' : printf("%d * %d = %d ",a,b,a*b);break;
      case '/' : printf("%d / %d = %d ",a,b,a/b);break;
      default : printf("enter correct operator ");
     
  }

    return 0;
}
