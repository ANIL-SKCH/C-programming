
//C program to Check Whether a Number is Positive or Negative or Zero.
#include <stdio.h>
int main(){
    int a;// initialization of variable
    printf("enter the number");
    scanf("%d",&a);// input by user.
    if(a>0){
        printf("The given number is Positive");// for positive numbers.
    }else if(a<0){
        printf("the given number is Negative");// for negative numbers.
        
    } else{
        printf("The given number is Zero");//For zero
    }
}
