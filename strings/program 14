// Write a program to find and count all palindromic substrings in a given string.
#include<stdio.h>
#include<string.h>
int main()
{
    char s[50];
   int n,i,c=0;
   printf("enter the string : ");
   gets(s);
   n=strlen(s);
   for(i=0;i<n/2;i++){
       
      if(s[i]==s[n-i-1]){
          
          c++;
          
      }
   }
   printf("total palindromic substrings are %d",c);
    return 0;
}
